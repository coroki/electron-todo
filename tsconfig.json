{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "pretty": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
